<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li>
    <% if task.completed %>
    <i class="far fa-check-square"></i>
    <% else %>
    <i class="far fa-square"></i>
    <% end %>
    <%= link_to task.title, show_task_path(task) %>
    <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, destroy_task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>

<%= link_to '<i class="fas fa-plus"></i> Add a new task'.html_safe, new_task_path %>
